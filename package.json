{
  "name": "rescript-struct",
  "version": "5.0.1",
  "description": "The fastest composable parser/serializer for ReScript (and TypeScript)",
  "keywords": [
    "ReScript",
    "Struct",
    "JSON",
    "Schema",
    "Typesafe",
    "Parse",
    "Serialize",
    "Encode",
    "Decode",
    "Validation",
    "Transform",
    "Migration",
    "Contract",
    "Mapping",
    "Jzon",
    "Zod",
    "Superstruct",
    "Runtypes",
    "Ajv",
    "Ppx",
    "Decco"
  ],
  "homepage": "https://github.com/DZakh/rescript-struct#readme",
  "bugs": {
    "url": "https://github.com/DZakh/rescript-struct/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZakh/rescript-struct.git"
  },
  "license": "MIT",
  "author": "Dmitry Zakharov <dzakh.dev@gmail.com>",
  "type": "module",
  "main": "./dist/S.js",
  "module": "./dist/S.mjs",
  "types": "./src/S_JsApi.d.ts",
  "files": [
    "dist",
    "src/S.res",
    "src/S.resi",
    "src/S.bs.js",
    "src/S.bs.mjs",
    "src/S_JsApi.d.ts",
    "RescriptStruct.gen.ts",
    "bsconfig.json"
  ],
  "scripts": {
    "benchmark": "node ./packages/tests/src/benchmark/Benchmark.bs.mjs",
    "coverage": "c8 --reporter=lcov npm test",
    "prepack": "node ./packages/prepack/src/Prepack.bs.mjs",
    "ppx:install": "node ./packages/ppx/install.cjs",
    "res": "rescript build -with-deps -w",
    "res:build": "rescript build -with-deps",
    "test:res": "cd ./packages/tests && rescript clean && rescript build -with-deps -w",
    "test": "ava",
    "lint:stdlib": "rescript-stdlib-vendorer lint --project-path=packages/tests --ignore-path=src/ppx/Ppx_Primitives_test.res"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "mjs": true
    },
    "files": [
      "packages/tests/src/**/*_test.bs.mjs",
      "packages/tests/src/**/*_test.ts"
    ],
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm"
    ]
  },
  "devDependencies": {
    "@dzakh/rescript-ava": "2.3.0",
    "@dzakh/rescript-core": "0.2.0",
    "ava": "5.2.0",
    "benchmark": "2.1.4",
    "c8": "7.12.0",
    "rescript": "11.0.0-beta.4",
    "rescript-stdlib-vendorer": "1.0.0",
    "rescript-struct": ".",
    "ts-expect": "1.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "rescript": "11.0.x || ~11.0.0-rc"
  },
  "packageManager": "pnpm@7.11.0"
}
